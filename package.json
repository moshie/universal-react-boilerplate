{
  "name": "universal-react-boilerplate",
  "version": "0.0.0",
  "description": "Simple boilerplate designed for universal React applications.",
  "author": "David Hewitt <hello@wp-unite.io>",
  "scripts": {
    "start": "node ./dist/server.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "babel src -d dist",
    "build:client": "webpack",
    "dev": "npm-run-all --parallel watch:*",
    "watch:webpack": "webpack -w",
    "watch:server": "nodemon ./src/server.js --exec babel-node --ext js,jsx --ignore public/",
    "test": "mocha ./src/**/*.spec.js --require babel-core/register"
  },
  "main": "server.js",
  "keywords": [
    "universal",
    "isomorphic",
    "react",
    "tutorial"
  ],
  "dependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "express": "4.13.4",
    "express-validator": "^4.2.1",
    "jsonwebtoken": "^8.0.1",
    "mongoose": "^4.12.0",
    "morgan": "^1.9.0",
    "nodemailer": "^4.1.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^4.4.8",
    "react-router": "^4.1.2",
    "react-router-dom": "^4.1.2",
    "redux": "^3.7.2",
    "spdy": "^3.4.7",
    "webpack": "^3.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-datetime": "^1.5.0",
    "mocha": "^4.0.1",
    "nodemon": "1.11.0",
    "npm-run-all": "3.1.2"
  },
  "license": "MIT"
}
